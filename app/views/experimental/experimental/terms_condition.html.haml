:javascript
  $(document).ready(function(){
    jQuery('.contact-button-single').click(function(){
      $(".edit_user").submit();
    });

    
    $('#user_accept_terms_true').click(function () {
      $(".contact-button.contact-button-single.next").show();
      $(".contact-button.contact-button-single.continue").hide();
    });

    $('#user_accept_terms_false').click(function () {
      $(".contact-button.contact-button-single").hide();
      $(".contact-button.contact-button-single.continue").show();
    });
  });